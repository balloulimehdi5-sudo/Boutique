    <script>
        // Produits d'exemple (remplacez par vos vrais produits)
        const products = [
            {
                id: 1,
                name: "Produit Premium",
                description: "Un excellent produit de haute qualit√© avec toutes les fonctionnalit√©s que vous recherchez.",
                price: 99.99,
                category: "Premium"
            },
            {
                id: 2,
                name: "Produit Standard",
                description: "Notre produit le plus populaire avec un excellent rapport qualit√©-prix.",
                price: 49.99,
                category: "Standard"
            },
            {
                id: 3,
                name: "Produit Basic",
                description: "Une option abordable pour commencer, parfait pour les d√©butants.",
                price: 19.99,
                category: "Basic"
            }
        ];

        // Initialisation au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Page charg√©e, initialisation...');
            loadProducts();
            setupModal();
        });

        // Chargement des produits
        function loadProducts() {
            console.log('Chargement des produits...');
            const grid = document.getElementById('productsGrid');
            
            if (products.length === 0) {
                grid.innerHTML = '<p>Aucun produit disponible pour le moment.</p>';
                return;
            }
            
            grid.innerHTML = '';
            
            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <div class="product-name">${product.name}</div>
                    <div class="product-description">${product.description}</div>
                    <div class="product-category">${product.category}</div>
                    <div class="product-price">${product.price}‚Ç¨</div>
                    <button class="btn btn-primary" onclick="selectProduct(${product.id})">
                        Commander
                    </button>
                `;
                grid.appendChild(productCard);
            });
            
            console.log('Produits charg√©s:', products.length);
        }

        // Configuration du modal
        function setupModal() {
            const modal = document.getElementById('orderModal');
            const closeBtn = document.querySelector('.close');
            
            closeBtn.onclick = closeModal;
            
            window.onclick = function(event) {
                if (event.target == modal) {
                    closeModal();
                }
            }
            
            document.getElementById('orderForm').addEventListener('submit', submitOrder);
            console.log('Modal configur√©');
        }

        // S√©lection d'un produit
        function selectProduct(productId) {
            console.log('Produit s√©lectionn√©:', productId);
            const product = products.find(p => p.id === productId);
            
            if (!product) {
                alert('Produit non trouv√©');
                return;
            }
            
            document.getElementById('selectedProductId').value = productId;
            
            // Mise √† jour du r√©sum√©
            document.getElementById('productSummary').innerHTML = `
                <h3>${product.name}</h3>
                <p>${product.description}</p>
                <p><strong>Prix: ${product.price}‚Ç¨</strong></p>
            `;
            
            // Affichage du modal
            document.getElementById('orderModal').style.display = 'block';
        }

        // Fermeture du modal
        function closeModal() {
            document.getElementById('orderModal').style.display = 'none';
            document.getElementById('orderForm').reset();
        }

        // Soumission de commande
        function submitOrder(e) {
            e.preventDefault();
            
            const productId = parseInt(document.getElementById('selectedProductId').value);
            const product = products.find(p => p.id === productId);
            
            const orderData = {
                product: product,
                customer: {
                    name: document.getElementById('customerName').value,
                    email: document.getElementById('customerEmail').value,
                    phone: document.getElementById('customerPhone').value,
                    address: document.getElementById('customerAddress').value
                },
                date: new Date().toLocaleString(),
                id: 'CMD-' + Date.now()
            };
            
            // Sauvegarde de la commande
            let orders = JSON.parse(localStorage.getItem('orders') || '[]');
            orders.push(orderData);
            localStorage.setItem('orders', JSON.stringify(orders));
            
            // Notification
            showNotification('Commande confirm√©e ! Num√©ro: ' + orderData.id);
            
            // Fermeture du modal
            closeModal();
            
            console.log('Commande enregistr√©e:', orderData);
        }

        // Affichage notification
        function showNotification(message) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.style.display = 'block';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 4000);
        }

        // Test de fonctionnement
        console.log('Script charg√©, produits disponibles:', products.length);
    </script>
</body>
